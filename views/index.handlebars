<header>
    <div class="container">
        <div class="row">
            <img class="mx-auto" style="background-color: transparent; height:10rem" id="burger-image"
                src="assets/img/burger.png" alt="burger-image">




        </div>
        <div class="row  my-1">
            <h1 class="display-2 mx-auto font-weight-bold">Eat Da Burger!</h1>
        </div>
    </div>
</header>
<hr>
<div class="container">
    <div class="row ">

        <!-- <div id="burgers-to-devour" class="col-md-5 border"> -->
        <div id="burgers-to-devour" class="col-md-6 p-1">

            <h2 class="text-center font-italic font-weight-bold">Burgers to be Devoured!</h2>
            <br>
            <ul class="list-group" style="list-style: none">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}

                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <!-- <div class="col-md-2 "></div> -->
        <!-- <div id="devoured-burgers" class="col-md-5 border"> -->
        <div id="devoured-burgers" class="col-md-6 p-1">
            <h2 class="text-center font-italic font-weight-bold ">Devoured Burgers!</h2>

            <br>
            <ul class="list-group" style="list-style: none">
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <br>

    <div class="container border border-primary mb-2 bg-secondary text-light font-weight-bold">
        <div class="row">

            <h2 class="mx-auto display-2">Add a Burger!</h3>
        </div>
        <br>
        <div class="row">
            <form class=" mx-auto create-form">

                <!-- MAY NEED TO UPDATE THESE IDS AND VARS  -->
                <div class="form-group">

                    <input type="text" id="add-burger-field" name="burger_name" placeholder="Burger name">
                    <button class="btn btn-primary" id="add-burger-btn" type="submit">Add da Burger!</button>
                </div>


            </form>

        </div>
    </div>